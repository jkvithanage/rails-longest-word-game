<div class="container mt-3">
<h1>New Game</h1>
  <div class="letters-grid">
    <% @letters.each do |letter|%>
      <h2 class="box"><%= letter %></h2>
    <% end %>
  </div>
  <p class="mt-3">What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
  <div class="input-group mb-3">
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play" class="btn btn-primary">
  </div>
  <input type="hidden" name="letters" value="<%= @letters %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
